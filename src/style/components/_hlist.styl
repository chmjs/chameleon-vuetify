@import '../mixins/_clearfix'

.c-hlist
  clearfix()
  &-item
    box-sizing: border-box
    float: left
    iframe,
    video
      width: 100%
      display: block

  &--spaced
    padding: 8px
    .c-hlist-items
      .c-hlist-item
        padding: 0 8px;
      :first-child
        padding-left: 0;
      :last-child
        padding-right: 0;
