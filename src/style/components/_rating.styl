.c-rating
  position: relative

  .rating__message
    position: relative
    font-size: 12px
    opacity: 0
    top: -10px
    transition: all .3s cubic-bezier(.25, .8, .25, 1)

  .v-icon
    position: relative
    color: #bdbdbd
    -webkit-touch-callout: none
    -webkit-user-select: none
    -moz-user-select: none
    -ms-user-select: none
    user-select: none

    &:hover
      cursor: pointer

&.rating--error
  .rating__message
    color: #ff5252
    opacity: 1
    top: 0
